{
  "expo": {
    "name": "Fluxx",
    "slug": "fluxx",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fluxx.app",
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "Fluxx needs access to save your canvas creations to your photo library.",
        "NSPhotoLibraryUsageDescription": "Fluxx needs access to your photo library to save your canvas creations."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.fluxxstable",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Fluxx to save your canvas creations to your photos.",
          "savePhotosPermission": "Allow Fluxx to save your canvas creations to your photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "owner": "quezle",
    "extra": {
      "eas": {
        "projectId": "c390b4c6-b68f-4863-a09c-8d04445503b4"
      }
    }
  }
}