{
  "expo": {
    "name": "Fluxx",
    "slug": "fluxx",
    "version": "1.0.0",
    "scheme": "fluxx",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fluxx.app",
      "associatedDomains": [
        "applinks:fluxx.app",
        "applinks:fluxx.app"
      ],
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "Fluxx needs access to save your canvas creations to your photo library.",
        "NSPhotoLibraryUsageDescription": "Fluxx needs access to your photo library to save your canvas creations.",
        "NSMicrophoneUsageDescription": "Fluxx needs access to your microphone to record voice comments and AR videos.",
        "NSCameraUsageDescription": "Fluxx needs camera access to display canvases in AR and create AR effects.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.fluxxstable",
      "googleServicesFile": "./google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "fluxx"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "RECORD_AUDIO",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Fluxx to save your canvas creations to your photos.",
          "savePhotosPermission": "Allow Fluxx to save your canvas creations to your photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-asset",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Fluxx needs camera access for AR effects and video recording",
          "enableMicrophonePermission": true,
          "microphonePermissionText": "Fluxx needs microphone access for AR videos with sound"
        }
      ]
    ],
    "owner": "raymanjago",
    "extra": {
      "eas": {
        "projectId": "b4295abe-95f4-48ce-834d-7b059809f1aa"
      }
    }
  }
}